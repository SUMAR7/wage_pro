<%= form_for(@user_profile, class: 'grid gap-2 sm:grid-cols-2 sm:gap-6', url: @user_profile.persisted? ? update_profile_profile_path(@user) : create_new_profile_profile_path(@user) ) do |f| %>
  <div class="field">
    <%= f.label :birthday, class: 'form-label' %>
    <%= f.date_select :birthday, start_year: 1900, end_year: DateTime.current.year, required: true %>
  </div>

  <div class="field">
    <label for="gender" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Gender</label>
    <select name='user_profile[gender]' id="gender" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
      <option>Select Gender</option>
      <% UserProfile.genders.keys.each do |gender| %>
        <option <%= f.object.gender == gender ? 'selected' : '' %> value="<%= gender %>"><%= gender %></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :nationality, class: 'form-label' %>
    <%= f.text_field :nationality %>
  </div>

  <div class="field">
    <%= f.label :is_local_resident, class: 'form-label' %>
    <%= f.check_box :is_local_resident %>
  </div>

  <div class="field">
    <label for="identification_type" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Identification type</label>
    <select name='user_profile[identification_type]' id="identification_type" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
      <option>Select Identification Type</option>
      <% UserProfile.identification_types.keys.each do |id_type| %>
        <option <%= f.object.identification_type == id_type ? 'selected' : '' %> value="<%= id_type %>"><%= id_type %></option>
      <% end %>
    </select>
  </div>

  <div class="field">
    <%= f.label :identification_number, class: 'form-label' %>
    <%= f.text_field :identification_number %>
  </div>

  <!--  TODO: Add rest of the attributes as an assignment-->

  <div class="field">
    <div class="actions mt-8">
      <%= f.submit "Save", class: 'button-primary mr-4' %>
      <%= link_to 'Cancel', profile_path(@user), class: 'button-secondary' %>
    </div>
  </div>
<% end %>
