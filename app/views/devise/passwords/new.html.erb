<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen pt:mt-0 dark:bg-gray-900">
  <a href="/" class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white">
    <span>WagePro</span>
  </a>

  <!-- Card -->
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
      Forgot your password?
    </h2>

    <p class="text-sm text-gray-500 dark:text-white">
      Don't worry! Just type in your email and we will send you instructions to reset your password!
    </p>

    <%=  form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'class="mt-8 space-y-6' ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text-input', placeholder: "name@company.com", required: true %>
      </div>

      <div class="actions mt-8 mb-8">
        <%= f.submit "Send me reset password instructions", class: 'button-primary' %>
      </div>

      <%- if controller_name != 'sessions' %>
        <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
          No need? <%= link_to "Login here", new_session_path(resource_name), class: 'text-primary-700 hover:underline dark:text-primary-500' %>
        </div>
      <% end %>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="text-sm font-medium text-gray-500 dark:text-gray-400 mt-2">
          Not registered? <%= link_to "Create account", new_registration_path(resource_name), class: 'text-primary-700 hover:underline dark:text-primary-500' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
