<div class="flex flex-col items-center justify-center px-6 pt-8 mx-auto md:h-screen pt:mt-0 dark:bg-gray-900">
  <a href="/" class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white">
    <span>WagePro</span>
  </a>

  <!-- Card -->
  <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
      Sign in to platform
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'class="mt-8 space-y-6' ) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text-input', placeholder: "name@company.com", required: true %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-text-input', placeholder: '••••••••', required: true %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :remember_me, class: 'w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:focus:ring-primary-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600' %>
          </div>
          <div class="ml-3 text-sm">
            <%= f.label :remember_me, class: 'font-medium text-gray-900 dark:text-white' %>
          </div>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Lost Password?", new_password_path(resource_name), class: 'ml-auto text-sm text-primary-700 hover:underline dark:text-primary-500' %>
          <% end %>
        </div>
      <% end %>

      <div class="actions mt-8 mb-8">
        <%= f.submit "Log in", class: 'button-primary' %>
      </div>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
          Not registered? <%= link_to "Create account", new_registration_path(resource_name), class: 'text-primary-700 hover:underline dark:text-primary-500' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
