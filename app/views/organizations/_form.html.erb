<%= form_for(@organization, class: 'grid gap-2 sm:grid-cols-2 sm:gap-6' ) do |f| %>
  <div class="field">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, autofocus: true, class: 'form-text-input', placeholder: "SUMAR TECH LTD.", required: true %>
  </div>

  <div class="field">
    <%= f.label :salary_distribution_day, class: 'form-label' %>
    <%= f.text_field :salary_distribution_day, autofocus: true, class: 'form-text-input', type: 'number', placeholder: 1, required: true %>
  </div>

  <div class="field">
    <div class="actions mt-8">
      <%= f.submit "Save", class: 'button-primary mr-4' %>
      <%= link_to 'Cancel', organizations_path, class: 'button-secondary' %>
    </div>
  </div>
<% end %>
